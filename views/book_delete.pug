extends layout

block content
  h1 #{title}: #{book.name}
  
  if instances_books.length
  
    p #[strong Delete the following instances before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Instances
    
      dl
      each instance in instances_books
        dt 
          a(href=instance.url) #{instance._id}
        dd #{instance.book.title}
        dd #{instance.status}

  else
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete